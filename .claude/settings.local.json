{
  "permissions": {
    "allow": [
      "Bash(for file in *.tsx)",
      "Bash(do if [ -f \"$file\" ])",
      "Bash(then if ! grep -q \"^''use client''\" \"$file\")",
      "Bash(! grep -q '^\"\"use client\"\"' \"$file\")",
      "Bash(then echo \"''use client'';\")",
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  }
}
